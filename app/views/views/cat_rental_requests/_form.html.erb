<form action="<%= url %>" method="POST">

  <input type="hidden" name="_method" value="<%= method %>">

  <div class="form-group">
    <label>Cat:</label>
    <select class="form-control" name="cat_rental_request[cat_id]">
      <% cats.each do |cat| %>
      <option value="<%= cat.id %>"  <%= cat.id == rental.cat_id ? "selected" : "" %>><%= cat.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label>Start Date:</label>
    <input class="form-control" type="date" name="cat_rental_request[start_date]" value="<%= rental.start_date %>">
  </div>

  <div class="form-group">
    <label>End Date:</label>
    <input class="form-control" type="date" name="cat_rental_request[end_date]" value="<%= rental.end_date %>">
  </div>


  <div class="form-group">
    <div id='input'>
      <label>Location:</label>
      <input id='gmaps-input-address' class='form-control'
             placeholder='Start typing a place name...'
             type='text' />
      <textarea class="form-control" id="gmaps-output-latitude" name="cat_rental_request[lat]" row="1" style="display:none;"></textarea>
      <textarea class="form-control" id="gmaps-output-longitude" name="cat_rental_request[long]" row="1" style="display:none;"></textarea>

      <div id='gmaps-error'></div>
    </div>

    <div id='gmaps-canvas'></div>

  </div>

  <div class="form-group">
    <input class="btn btn-success" type="submit" value="Make Request">
  </div>
</form>

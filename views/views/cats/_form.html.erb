<form action="<%= url %>" method="post" class="form">
  <input type="hidden" name="_method" value="<%= method  %>">
  <div class="form-group">
    <label>Name:</label>
    <input  class="form-control" type="text" name="cat[name]" value="<%= cat.name %>">
  </div>
  <div class="form-group">
    <label>Birth Date:</label>
    <input class="form-control" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>"></input>
  </div>

  <div class="form-group">
    <label>Color:</label>
    <select name="cat[color]" class="form-control">
      <option value="" disabled selected>Select a color</option>
      <% Cat::COLORS.each do |color| %>
        <option value="<%= color %>" <%= @cat.color == color ? "selected" : "" %> ><%= color.capitalize %></option>
      <% end %>
    </select>
  </div>

  <label>Sex:</label>
  <% Cat::SEXES.each do |sex| %>
    <div class="radio">
      <label>
        <input class="radio" type="radio" name="cat[sex]" value="<%= sex %>" <%= @cat.sex.nil? || @cat.sex == sex ? "checked" : "" %> ></input>
        <%= sex %>
      </label>
    </div>

  <% end %>

  <div class="form-group">
    <label>Description:
      <textarea class="form-control" name="cat[description]" rows="8" cols="80">
        <%= cat.description %>
      </textarea>
    </label>
  </div>

  <div class="form-group">
    <div id='input'>
      <label>Location:</label>
      <input class='form-control' id='gmaps-input-address'
             placeholder='Start typing a place name...'
             type='text' />
      <textarea class="form-control" id="gmaps-output-latitude" name="cat[lat]" row="1" style="display:none;"></textarea>
      <textarea class="form-control" id="gmaps-output-longitude" name="cat[long]" row="1" style="display:none;"></textarea>

      <div id='gmaps-error'></div>
    </div>

    <div id='gmaps-canvas'></div>

  </div>

  <input type="submit" value="Create Cat" class="btn btn-success" >
   <div id='gmaps-error'></div>

</form>
